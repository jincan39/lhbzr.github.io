/**
 * Music.
 */
.music
  bottom 18px
  color #FFF
  font-size 13px
  font-weight 100
  letter-spacing 0.1em
  opacity 0
  left 50%
  position absolute
  text-align center
  transition opacity .4s
  transform translateX(-50%)
  visibility hidden
  z-index 100

  &.is-active
    opacity 1
    visibility visible

  @media (max-width 1023px)
    display none


/**
 * Buttons.
 */
.music-btns
  display block
  margin-bottom 10px

.music-btn
  border none
  background none
  outline none
  padding 0
  fill #FFF

.music-btn-icon
  height 13px
  stroke #FFF
  width 13px


/**
 * Toggle.
 */
.music-toggle
  .music-btn-icon-pause
    display block

  .music-btn-icon-play
    display none

  &.is-paused
    .music-btn-icon-pause
      display none

    .music-btn-icon-play
      display block


/**
 * Logo.
 */
.music-soundcloud
  display inline-block
  margin-right 15px
  margin-top -2px
  vertical-align middle


/**
 * Text.
 */
.music-title,
.music-user
  text-transform capitalize
